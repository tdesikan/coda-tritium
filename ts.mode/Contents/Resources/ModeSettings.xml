<?xml version="1.0" encoding="UTF-8"?>
<settings>
  <template>myTrituim.ts</template>   <!-- Provide a template for File->new -->
  <recognition>
    <extension>ts</extension>                   <!-- Add file extensions -->
    <extension casesensitive="no">ts</extension> <!-- Add case sensitive file extensions -->
    <filename>Trituim</filename>                 <!--  Add filenames -->
    <regex>\A#!/usr/bin/(env )?perl</regex>      <!--  Add regex of content -->
  </recognition>
</settings>
